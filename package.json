    "concurrently": "^4.1.2",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "bcryptjs": "^2.4.3",
    "express": "^4.17.1",
    "hover.css": "^2.3.2",
    "if-env": "^1.0.4",
    "mongoose": "^5.10.15",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.10.0",
    "react-polls": "^1.2.0",
    "react-router-dom": "^5.2.0",
    "socket.io": "^3.0.3"
  }
}
